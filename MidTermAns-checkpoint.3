    "def tough(indent, n):\n",
    "    if n <= 0:\n",
    "        return\n",
    "\n",
    "    # Print the leading spaces\n",
    "    print(\" \" * indent, end=\"\")\n",
    "\n",
    "    # Print the stars\n",
    "    for i in range(n):\n",
    "        print(\"*\", end=\" \")\n",
    "\n",
    "    # Move to the next line\n",
    "    print()\n",
    "\n",
    "    # Recursive call with reduced indentation and n-2 stars\n",
    "    tough(indent + 1, n - 2)\n",
    "\n",
